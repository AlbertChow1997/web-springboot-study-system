<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace: 命名空间 -->
<mapper namespace="com.albert.mapper.StudentMapper">
    <delete id="deleteByIds">
        delete from student where id in
        <foreach collection="ids" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>
    <!--    <insert id="add">-->
<!--        insert into student (name, no, gender, degree, clazz_id, id_card, is_college, address, phone, create_time, update_time, graduation_date, violation_count, violation_score)-->
<!--        values (#{name}, #{no}, #{gender}, #{degree}, #{clazzId}, #{idCard}, #{isCollege}, #{address}, #{phone}, now(), now(), #{graduationDate}, #{violationCount}, #{violationScore})-->
<!--    </insert>-->


    <!-- 动态条件查询 -->
    <select id="list" resultType="com.albert.pojo.Student">
        select s.*, c.name clazzName from student s left join clazz c on s.clazz_id = c.id
        <where>
            <if test="name != null and name != ''">
                s.name like concat('%',#{name},'%')
            </if>
            <if test="degree != null">
                and s.degree = #{degree}
            </if>
            <if test="clazzId != null">
                and s.clazz_id = #{clazzId}
            </if>
        </where>
        order by s.update_time desc
    </select>
</mapper>